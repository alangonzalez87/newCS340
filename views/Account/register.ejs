<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigation') %>
<title>Register</title>
<body>
    <h1>Register</h1>
    <form method="post" action="/account/register">
        <label for="account_firstname">First Name:</label>
        <input type="name" id="account_firstname" name="account_firstname" required value="<%= locals.account_firstname %>">

        <label for="account_lastname">Last Name:</label>
        <input type="lname" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
        
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required>
        
        <button type="submit">Register</button>
        <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>

        <p>Have account? <a href="/account/login">Login</a></p>
    </form>
</body>
<%- include('../partials/footer') %>