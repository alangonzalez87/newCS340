<!-- views/inventory/add-inventory.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Inventory</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <h1>Add New Vehicle to Inventory</h1>

    <%- messages() %>
    

    <form action="/inv/add-inventory" method="POST" enctype="multipart/form-data">
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= typeof formData !== 'undefined' ? formData.inv_make : '' %>" required>
        
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= typeof formData !== 'undefined' ? formData.inv_model : '' %>" required>
        
        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" value="<%= typeof formData !== 'undefined' ? formData.inv_year : '' %>" required>
        
        <label for="inv_description">Description:</label>
        <textarea id="inv_description" name="inv_description" required><%= typeof formData !== 'undefined' ? formData.inv_description : '' %></textarea>
        
        <label for="inv_image">Image:</label>
        <input type="file" id="inv_image" name="inv_image" accept="image/*" required>
        
        <label for="inv_thumbnail">Thumbnail:</label>
        <input type="file" id="inv_thumbnail" name="inv_thumbnail" accept="image/*" required>
        
        <label for="inv_price">Price:</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= typeof formData !== 'undefined' ? formData.inv_price : '' %>" required>
        
        <label for="inv_miles">Miles:</label>
        <input type="number" id="inv_miles" name="inv_miles" value="<%= typeof formData !== 'undefined' ? formData.inv_miles : '' %>" required>
        
        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" value="<%= typeof formData !== 'undefined' ? formData.inv_color : '' %>" required>
        
        <label for="classification_id">Classification:</label>
        <%= classificationList %>
        
        <button type="submit">Add Vehicle</button>
    </form>

    <a href="/inv/management">Back to Inventory Management</a>
</body>
</html>
